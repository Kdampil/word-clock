{
  "name": "world-clock",
  "version": "1.0.0",
  "description": "World Clock Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --publish=never"
  },
  "build": {
    "appId": "com.example.worldclock",
    "productName": "WorldClock",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico" // Optional: Add an icon file if needed
    },
    "publish": null // Disable publishing
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  }
}